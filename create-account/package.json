{
  "name": "create-account",
  "scripts": {
    "test": "jest",
    "test:rs": "cd program && RUST_BACKTRACE=full cargo test-sbf -- --no-capture",
    "build-and-test": "cargo build-sbf --manifest-path=./program/Cargo.toml --sbf-out-dir=./program/target/deploy && cargo build-sbf --manifest-path=./program/Cargo.toml --sbf-out-dir=./tests/fixtures && pnpm test",
    "build": "cargo build-sbf --manifest-path=./program/Cargo.toml --sbf-out-dir=./program/target/deploy",
    "deploy": "solana program deploy ./program/target/deploy/account_data.so",
    "test-sbf": "cargo test-sbf --manifest-path=./program/Cargo.toml"
  },
  "dependencies": {
    "@solana/web3.js": "^1.47.3"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.9.1",
    "jest": "^29.7.0",
    "litesvm": "^0.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^4.3.5"
  }
}